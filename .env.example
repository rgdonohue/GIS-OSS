# Database Configuration
POSTGRES_DB=gis_oss
POSTGRES_USER=gis_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_READONLY_USER=gis_readonly
POSTGRES_READONLY_PASSWORD=changeme_readonly_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
READONLY_DATABASE_URL=postgresql://gis_readonly:changeme_readonly_in_production@localhost:5432/gis_oss
# Optional fallback DSN (used if READONLY_DATABASE_URL is unset)
DATABASE_URL=

# Model Configuration (Week 2+)
MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
MODEL_QUANTIZATION=int8
MODEL_MAX_TOKENS=16384
VLLM_HOST=localhost
VLLM_PORT=8000
ENABLE_LOCAL_LLM_PLANNER=false
LLM_PROVIDER=ollama
LLM_OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=qwen2.5:7b-instruct
LLM_TIMEOUT_SECONDS=20
LLM_MAX_RETRIES=1
LLM_PROMPT_MAX_CHARS=4000

# Service Ports
REDIS_PORT=6379
TITILER_PORT=8081
NOMINATIM_PORT=8082

# API Configuration
API_KEY=dev_key_change_in_production
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
APP_ENV=development
AUTHZ_BACKEND=database
ALLOW_PUBLIC_API=false

# Telemetry (optional)
ENABLE_OTEL=false
OTEL_SERVICE_NAME=gis-oss-api

# Optional External Services (can be left empty for offline mode)
WATTTIME_API_KEY=
EPSG_API_URL=https://epsg.io

# Resource Limits
TITILER_WORKERS=2
MAX_CONCURRENT_QUERIES=10
QUERY_TIMEOUT_SECONDS=30

# Database Pooling
DB_POOL_MIN=1
DB_POOL_MAX=5
ALLOWED_QUERY_TABLES=data.features

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_IDENTIFIERS=10000
RATE_LIMIT_BUCKET_TTL_SECONDS=3600

# Data Directories
DATA_DIR=./data
CACHE_DIR=./cache
MODELS_DIR=./models

# Feature Flags
ENABLE_CARBON_TRACKING=false
ENABLE_OFFLINE_MODE=false
ENABLE_AUDIT_LOG=true
